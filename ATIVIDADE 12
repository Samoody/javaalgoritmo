import java.util.Scanner;

public class ExibeNumeroECaractere {
    public static void main(String[] args) {
        // Criando um objeto Scanner para entrada de dados
        Scanner scanner = new Scanner(System.in);

        // Solicitando ao usuário que insira um número inteiro
        System.out.print("Digite um número inteiro: ");
        int numero = scanner.nextInt();

        // Solicitando ao usuário que insira um caractere
        System.out.print("Digite um caractere: ");
        char caractere = scanner.next().charAt(0);  // Lendo o primeiro caractere da entrada

        // Exibindo ambos em uma única mensagem formatada
        System.out.printf("Você digitou o número inteiro: %d e o caractere: '%c'.\n", numero, caractere);

        // Fechando o Scanner
        scanner.close();
    }
}
